<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>Uptrend</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
		<servlet-name>userRegistration</servlet-name>
		<servlet-class>com.controller.UserRegistration</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userRegistration</servlet-name>
		<url-pattern>/functions/user%20management/userReg</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.controller.Login</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/functions/user%20management/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>menubehavior</servlet-name>
		<servlet-class>com.controller.MenuBehavior</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>menubehavior</servlet-name>
		<url-pattern>/functions/user%20management/menubehavior</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>usersettings</servlet-name>
		<servlet-class>com.controller.UserSettings</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>usersettings</servlet-name>
		<url-pattern>/functions/user%20management/usersettings</url-pattern>
	</servlet-mapping>
	
	
	
	<servlet>
		<servlet-name>adminlogin</servlet-name>
		<servlet-class>com.controller.AdminLogin</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>adminlogin</servlet-name>
		<url-pattern>/functions/user%20management/adminlogin</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>forgotpassword</servlet-name>
		<servlet-class>com.controller.ForgotPassword</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>forgotpassword</servlet-name>
		<url-pattern>/functions/user%20management/forgotpassword</url-pattern>
	</servlet-mapping>
	
  
</web-app>